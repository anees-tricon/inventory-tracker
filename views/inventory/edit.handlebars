  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
  <h3>Edit Inventory Item</h3>
  <form action="/inventory/{{item.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="category">Category</label>
      <small class="form-text text-muted"></small>vegetables, grocery, household etc.</small>
      <input type="text" class="form-control" name="category" value="{{item.category}}" required>
    </div>
    <div class="form-group">
      <label for="name">Item Name</label>
      <input type="text" class="form-control" name="name" value="{{item.name}}" required>
    </div>
    <div class="form-group">
      <label for="quantityType">Quantity Type</label>
      <small class="form-text text-muted"></small>count, weight(in grams), packet size etc</small>
      <input type="text" class="form-control" name="quantityType" value="{{item.quantityType}}" required>
    </div>
    <div class="form-group">
      <label for="quantity">Quantity</label>
      <input type="text" class="form-control" name="quantity" value="{{item.quantity}}" required>
    </div>
    <div class="form-group">
      <label for="purchaseDate">Purchase Date</label>
      <input type="date" class="form-control" name="purchaseDate" value="{{item.purchaseDate}}" required>
    </div>
    <div class="form-group">
      <label for="expiryDate">Expiry Date</label>
      <input type="date" class="form-control" name="expiryDate" value="{{item.expiryDate}}">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>